<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ll_gift_shop_linear"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_home_top_round"
           >

            <com.zk.zk_online.weight.YuanJiaoImageView
                android:id="@+id/yjiv_gift_shop_giftimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/default_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_gift_shop_exchange_count"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text=""
                android:background="@drawable/gift_shop_bg_exchange"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/bg_home_bottom_round"
         android:layout_weight="2.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:lines="1"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:padding="3dp"
                    android:id="@+id/tv_gift_shop_gift_name"
                    android:textColor="#585858"
                    />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gift_shop_giftcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/gift_shop_wawa"
                            android:layout_alignParentLeft="true"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:clickable="true"
                            android:layout_centerVertical="true"
                            android:lines="1"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#585858"/>


                  <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_gift_shop_gift_price"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="ï¿¥"
                        android:clickable="true"
                        android:textSize="14sp"
                        android:textColor="#f35d28"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        </LinearLayout>


</RelativeLayout>