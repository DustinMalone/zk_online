<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:visibility="gone"
        />

   <android.support.v4.widget.SwipeRefreshLayout
       android:layout_width="match_parent"
       android:id="@+id/swip_layout"
       android:paddingBottom="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent">
       <com.zk.zk_online.weight.HeaderGridView
           android:id="@+id/GridView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/color_FFA54F"
           android:paddingBottom="20px"
           android:verticalSpacing="20px"
           android:horizontalSpacing="20px"
           android:numColumns="2" />
   </android.support.v4.widget.SwipeRefreshLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white">


        <TextView
            android:id="@+id/btn_fragment_home_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="推广分享"
            android:lines="2"
            android:textSize="14sp"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#727272"/>



        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_999999"/>

        <TextView
            android:id="@+id/btn_fragment_home_xiaoxi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="礼品商城"
            android:lines="2"
            android:textSize="14sp"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#727272"/>

        <ImageView
            android:id="@+id/iv_home_fragment_bottompic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="-25dp"
            android:clickable="true"
            android:src="@drawable/home_zhongjian_bottom"/>




        <TextView
            android:id="@+id/btn_fragment_home_mygift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="我的礼品"
            android:clickable="true"
            android:lines="2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#727272"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_999999"/>

        <TextView
            android:id="@+id/btn_fragment_home_rankings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="抓神排行"
            android:lines="2"
            android:clickable="true"
            android:onClick="onClick"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#727272"/>
    </LinearLayout>

</LinearLayout>
