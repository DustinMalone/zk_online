            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_FD6048"
            android:text=""
            />


    </LinearLayout>
</LinearLayout>