<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible"
        android:background="@drawable/wodelipin_b">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_fankui"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <!--机台名称，日期-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_item_user_advice_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:textColor="#808080"
                   android:layout_weight="1"
                   android:lines="1"
                   android:paddingRight="5dp"
                   android:ellipsize="end"
                   android:text="机台名称 : "/>

                <TextView
                    android:id="@+id/tv_item_user_advice_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="时间 : 2017-12-12"/>


            </LinearLayout>

            <!--反馈问题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_user_advice_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="反馈问题 : 爪子卡住不动"/>


            <TextView
                android:id="@+id/tv_item_user_advice_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B37E02"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="处理结果 : 退币10"/>



            <TextView
                android:id="@+id/tv_item_user_advice_handle_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B37E02"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="处理日期 : 2017-12-12"/>

            </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_advice_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:src="@drawable/item_chuli"/>



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>