<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ditu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/denglui_"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_login_zz"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_zz"
                android:focusable="true"
                android:inputType="number"
                android:hint="请输入账号"
                android:lines="1"
                android:paddingLeft="70dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_login_mm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_mm"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="70dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_login_remeber_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:drawableLeft="@drawable/sel_btn_remeber"
                android:drawablePadding="5dp"
                android:clickable="true"
                android:onClick="onClick"
                android:padding="5dp"
                android:background="@color/transparent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:text="记住密码"/>


            <Button
                android:id="@+id/btn_phone_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_phone_login"
                android:onClick="onClick"
                android:textColor="@color/color_FFA54F"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="80dp"
                android:layout_height="81dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:background="@drawable/btn_weixin_login"
                android:onClick="onClick" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号?"
            android:textColor="@color/color_727272"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="立即注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_provision"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆注册表示同意用户协议与隐私条款"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
    </LinearLayout>

