<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_item_tis_money_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/xx"/>

    <RelativeLayout
    android:layout_width="300dp"
    android:layout_height="235dp"
        android:background="@drawable/tishimoney_a">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="你的游戏币不足"
            android:textColor="@color/color_7F470B"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="请充值"
            android:textColor="@color/color_7F470B"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="或分享邀请码领取游戏币～"
            android:textColor="@color/color_7F470B"/>
        </LinearLayout>
    
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_tis_money_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sel_item_btn_share"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/btn_tis_money_share_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sel_item_btn_share_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"/>

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btn_tis_money_chongzhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/sel_item_btn_chongzhi"
            android:layout_weight="1"/>


    </LinearLayout>

    </RelativeLayout>

</LinearLayout>