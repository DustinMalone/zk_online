<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linear_p"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_home_top_round"
           >

            <com.zk.zk_online.weight.YuanJiaoImageView
                android:id="@+id/img_wawa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/default_img"/>
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/tv_device_status"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/lv"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/bg_home_bottom_round"
         android:layout_weight="2.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="编号:1"
                    android:textSize="14sp"
                    android:lines="1"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:padding="3dp"
                    android:id="@+id/tv_devicecode"
                    android:textColor="@color/black"
                    />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_f05c28"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_device_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/jin"
                            android:layout_centerInParent="true"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:clickable="true"
                            android:lines="1"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/color_ff5868"/>
                    </RelativeLayout>



                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_f05c28"/>

                  <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tv_item_play_info_mygift"
                        android:gravity="center"
                        android:text="宝贝详情"
                        android:clickable="true"
                        android:textSize="14sp"
                        android:textColor="@color/color_727272"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        </LinearLayout>


</RelativeLayout>