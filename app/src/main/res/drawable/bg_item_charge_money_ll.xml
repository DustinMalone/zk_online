<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 --><item>
    <shape>
        <solid android:color="@color/colorAccent" />
        <corners android:radius="5dp"/>
    </shape>

</item>
    <!-- 主体背景颜色值 -->
    <item android:top="3dp" android:right="3dp" android:bottom="3dp" android:left="3dp">
        <shape>
            <solid android:color="#ffffff" />
            <padding android:bottom="3dp"
                android:top="3dp"
                android:left="3dp"
                android:right="3dp"/>
        </shape>
    </item>


    <!-- 主体背景颜色值 -->
    <item android:top="50dp" >
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ff515e"
                android:startColor="#ff7e65"
                android:type="linear" />
        </shape>
    </item>
</layer-list>